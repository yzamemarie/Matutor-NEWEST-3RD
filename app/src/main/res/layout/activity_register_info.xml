<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification"
    android:background="@color/grey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@drawable/toolbar_gradient_bg"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:text="Learner Registration"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="first name"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regFirstnameInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="last name"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/regLastnameInput"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/text_grey"
                        android:textSize="18sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="email"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regEmailInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp"
                    android:enabled="false"/>
            </LinearLayout>

            <!--PASSWORD FRAME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="password"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regPasswordInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFF"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"
                    android:enabled="false"/>

            </LinearLayout>

            <!--CONFIRM PASSWORD-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="confirm password"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regConfirmPasswordInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="#FFFF"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/darker_gray"
                    android:singleLine="true"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="birthdate"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/regEditDate"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="MM/DD/YYYY"
                        android:textColor="@color/text_grey"
                        android:textColorHint="@android:color/darker_gray" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="6dp">

                    <!--age header-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:text="age"
                        android:textColor="@color/text_grey"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/regAgeSpinner"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@android:color/darker_gray"
                        android:spinnerMode="dropdown"
                        android:textSize="12sp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="contact number"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regContactInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="address"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regAddressInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="guardian's name"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regGuardianNameInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="guardian's email"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/regGuardianEmailInput"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/text_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <!--interest onward-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="my interests"
                        android:textSize="16sp"
                        android:textColor="@color/text_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(choose 5)*"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="@color/blue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="TOPIC 1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="10sp"
                                android:backgroundTint="@color/white"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:text="TOPIC 2"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="10sp"
                                android:backgroundTint="@color/white"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:text="TOPIC 3"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="10sp"
                                android:backgroundTint="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp">

                            <EditText
                                android:id="@+id/editTagText"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:hint="enter tag"
                                android:textColor="@color/text_grey"
                                android:textColorHint="@android:color/darker_gray"
                                android:inputType="text"/>

                            <Button
                                android:id="@+id/addTagButton"
                                android:layout_width="65dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:backgroundTint="@android:color/darker_gray"
                                android:text="+" />
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="upload a"
                            android:textSize="16sp"
                            android:textColor="@color/text_grey" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="valid government or school ID"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:textColor="@color/blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/regIdFrontButton"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="48dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:text="+" />

                        <EditText
                            android:id="@+id/idFrontPathTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="(front) choose file... "
                            android:textSize="15sp"
                            android:textColor="@color/text_grey"
                            android:editable="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/regIdBackButton"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="48dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:text="+" />

                        <EditText
                            android:id="@+id/idBackPathTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="(back) choose file... "
                            android:textSize="15sp"
                            android:textColor="@color/text_grey"
                            android:editable="false"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="upload a"
                            android:textSize="16sp"
                            android:textColor="@color/text_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="selfie"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:textColor="@color/blue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/regSelfieButton"
                            android:layout_width="65dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="48dp"
                            android:backgroundTint="@android:color/darker_gray"
                            android:text="+" />

                        <EditText
                            android:id="@+id/selfiePathTextView"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="choose file..."
                            android:textSize="15sp"
                            android:textColor="@color/text_grey"
                            android:editable="false"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:backgroundTint="@color/yellow"
                        android:text="REGISTER"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="already have an account?"
                            android:layout_gravity="center_horizontal"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/loginHereButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/blue"
                            android:text="Login here!"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
