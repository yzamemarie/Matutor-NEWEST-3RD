                                        android:layout_height="wrap_content">

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="35dp"
                                            android:backgroundTint="@color/grey"
                                            android:text="Humanities"
                                            android:textStyle="bold"
                                            android:textColor="@color/blue"
                                            android:textSize="8sp" />

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="35dp"
                                            android:layout_marginLeft="5dp"
                                            android:text="Sociology"
                                            android:textColor="@color/blue"
                                            android:textSize="8sp"
                                            android:backgroundTint="@color/grey"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="35dp">

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="35dp"
                                            android:backgroundTint="@color/grey"
                                            android:text="Information Technology"
                                            android:textStyle="bold"
                                            android:textColor="@color/blue"
                                            android:textSize="8sp" />
                                    </LinearLayout>
                                </FrameLayout>

                                <Button
                                    android:id="@+id/seeMoreButtonDash1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="65dp"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/blue"
                                    android:text="see more"
                                    android:textStyle="bold"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp" />
                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275dp"
                        android:layout_marginTop="5dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="250dp"
                            android:layout_height="180dp"
                            app:strokeColor="@color/grey"
                            app:cardCornerRadius="5dp">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="left"
                                        android:background="@drawable/profile_border"
                                        android:src="@drawable/user_pp"/>
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="65dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="John Denzel Arañas"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginTop="20dp"
                                        android:src="@drawable/map_pin"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginLeft="18dp"
                                        android:text="Tintay, Cebu City"
                                        android:textSize="10sp"
                                        android:textColor="@color/text_grey"/>
                                </FrameLayout>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="23dp"
                                    android:layout_marginLeft="25dp"
                                    android:isIndicator="true"
                                    android:numStars="3"
                                    android:scaleY=".5"
                                    android:scaleX=".5"
                                    android:stepSize="0.1" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="75dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:backgroundTint="@color/grey"
                                        android:text="Barista"
                                        android:textStyle="bold"
                                        android:textColor="@color/blue"
                                        android:textSize="8sp" />

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:layout_marginLeft="5dp"
                                        android:text="Food Technology"
                                        android:textColor="@color/blue"
                                        android:textSize="8sp"
                                        android:backgroundTint="@color/grey"/>
                                </LinearLayout>

                                <Button
                                    android:id="@+id/seeMoreButtonDash2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="65dp"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/blue"
                                    android:text="see more"
                                    android:textStyle="bold"
                                    android:textColor="@color/yellow"
                                    android:textSize="8sp" />
                            </FrameLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>
                </RelativeLayout>

            </HorizontalScrollView>

        </FrameLayout>

