                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@color/blue"/>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp">

